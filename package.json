{
  "name": "stshell",
  "description": "STShell is for the efficient storage and management of shell scripts",
  "version": "2.0.0",
  "author": "seantrane",
  "license": "Apache-2.0",
  "homepage": "https://github.com/seantrane/stshell",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seantrane/stshell.git"
  },
  "bugs": {
    "url": "https://github.com/seantrane/stshell/issues"
  },
  "scripts": {
    "lint:md": "npm run markdownlint -- -i 'node_modules/' -c '.markdownlint.yaml' './'",
    "lint": "npm run lint:md",
    "markdownlint": "markdownlint",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/travis-cli": "^7.0.0",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.1",
    "husky": "^1.0.0",
    "markdownlint-cli": "^0.13.0",
    "semantic-release": "^15.9.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        80
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogTitle": "# CHANGELOG"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  }
}
